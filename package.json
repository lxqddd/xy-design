{
	"name": "xy-design",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev.comp": "lerna exec npm run start --scope=@xy-design/components",
		"generate.comp": "lerna exec npm run generate --scope=@xy-design/components",
		"test": "lerna exec npm run test --scope=@xy-design/components",
		"dev.theme": "lerna exec npm run watch --scope=@xy-design/themes",
		"build.theme": "lerna exec npm run build --scope=@xy-design/themes",
		"dev": "concurrently yarn:dev.comp yarn:dev.theme",
		"build": "concurrently yarn:build.comp yarn:build.theme",
		"lint": "prettier --write packages/**/src/**",
		"prepare": "husky install"
	},
	"keywords": [
		"design",
		"xy-design",
		"UI",
		"xy-UI"
	],
	"author": "xy",
	"license": "ISC",
	"volta": {
		"node": "16.15.0",
		"yarn": "1.22.17"
	},
	"devDependencies": {
		"concurrently": "^7.2.2",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-better-sass-inheritance": "^0.0.3",
		"gulp-cached": "^1.1.1",
		"gulp-cssmin": "^0.2.0",
		"gulp-if": "^3.0.0",
		"gulp-sass": "^5.1.0",
		"gulp-watch": "^5.0.1",
		"husky": "^8.0.1",
		"lerna": "^4.0.0",
		"lint-staged": "^13.0.2",
		"onchange": "^7.1.0",
		"prettier": "^2.7.1"
	},
	"lint-staged": {
		"packages/**/src/**": "prettier --write"
	}
}
